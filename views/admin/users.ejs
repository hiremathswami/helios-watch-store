<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage Users | Helios Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #f3f4f6;
    }
  </style>
</head>

<body class="flex bg-gray-100 min-h-screen text-gray-800">
  <!-- Sidebar -->
  <aside class="w-64 bg-[#0f172a] text-white flex flex-col justify-between shadow-xl">
    <div>
      <h1 class="text-2xl font-bold text-white mb-8 text-center pt-6">HELIOS Admin</h1>
      <nav class="px-4 space-y-2">
        <a href="/admin" class="block py-2 px-3 rounded-lg hover:bg-blue-600 transition">Dashboard</a>
        <a href="/admin/manage-products" class="block py-2 px-3 rounded-lg hover:bg-blue-600 transition">Products</a>
        <a href="/admin/add-product" class="block py-2 px-3 rounded-lg hover:bg-blue-600 transition">Add Product</a>
        <a href="/admin/users" class="block py-2 px-3 bg-blue-600 rounded-lg font-semibold">Users</a>
      </nav>
    </div>
    <div class="p-4 text-center border-t border-blue-800/30">
      <a href="/" class="text-sm text-blue-400 hover:text-blue-300 transition">‚Üê Back to Store</a>
    </div>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 p-8 bg-white overflow-y-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-800">Registered Users</h1>
      <span class="text-gray-500 font-medium">
        Total: <%= users.length %> users
      </span>
    </div>

    <!-- Users Table -->
    <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-200">
      <table class="w-full text-sm text-left text-gray-600">
        <thead class="bg-blue-50 text-blue-700 uppercase text-xs tracking-wider border-b">
          <tr>
            <th class="px-6 py-3">Name</th>
            <th class="px-6 py-3">Email</th>
            <th class="px-6 py-3">Role</th>
            <th class="px-6 py-3">Registered On</th>
          </tr>
        </thead>

        <tbody>
          <% users.forEach(user => { %>
            <tr class="hover:bg-gray-50 transition border-b">
              <td class="px-6 py-3 font-semibold text-gray-800"><%= user.name %></td>
              <td class="px-6 py-3 text-gray-700"><%= user.email %></td>
              <td class="px-6 py-3">
                <% if (user.role === 'admin') { %>
                  <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-xs font-medium">Admin</span>
                <% } else { %>
                  <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-xs font-medium">User</span>
                <% } %>
              </td>
              <td class="px-6 py-3 text-gray-500">
                <%= new Date(user.createdAt).toLocaleDateString() %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </main>
</body>
</html>
