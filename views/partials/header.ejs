<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Helios | WatchStore</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/header.css">
</head>

<body>
  <header class="fixed top-0 left-0 w-full z-50 transition-all duration-300">
    <nav class="bg-white/90 backdrop-blur-md shadow-md">
      <div class="max-w-7xl mx-auto flex justify-between items-center px-8 py-4">

        <!-- Logo -->
        <a href="/" class="text-3xl font-extrabold tracking-wide logo-text">
          CHRONO.CO
        </a>

        <!-- Navbar Links -->
        <ul class="hidden md:flex space-x-8 font-medium text-gray-700">
          <li><a href="/" class="nav-link">Home</a></li>
          <li><a href="/products" class="nav-link">All Watches</a></li>
          <li><a href="/products/category/men" class="nav-link">Men</a></li>
          <li><a href="/products/category/women" class="nav-link">Women</a></li>
          <li><a href="/offers" class="nav-link">Offers</a></li>
          <li><a href="/blogs" class="nav-link">Blogs</a></li>
          <li><a href="/support" class="nav-link">Support</a></li>
        </ul>
          <% if (user && user.role === 'admin') { %>
  <a href="/admin" class="nav-link text-yellow-500 font-semibold">Admin Panel</a>
<% } %>


        <!-- Right Side -->
        <div class="flex items-center space-x-5 relative">
          <% if (user) { %>
            <!-- Cart Icon -->
            <a href="/cart" class="icon-btn" title="Cart">ðŸ›’</a>

            <!-- Account Dropdown -->
            <div class="relative">
              <button id="account-btn" class="icon-btn focus:outline-none" title="My Account">ðŸ‘¤</button>

              <!-- Dropdown Menu -->
              <div id="account-menu" class="hidden absolute right-0 mt-3 w-48 bg-white border border-gray-200 rounded-lg shadow-lg py-2">
                <a href="/account" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-700">My Account</a>
                <a href="/orders" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-700">Orders</a>
                <a href="/logout" class="block px-4 py-2 text-red-600 hover:bg-red-50">Logout</a>
              </div>
            </div>
          <% } else { %>
            <!-- Before Login: show only login -->
            <a href="/login" class="px-5 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-full font-medium transition-all duration-300">
              Login
            </a>
          <% } %>
        </div>

        <!-- Mobile Menu Button -->
        <button id="menu-btn" class="md:hidden text-2xl text-gray-700 focus:outline-none">â˜°</button>
      </div>
    </nav>

    <!-- Gold Divider -->
    <div class="h-[3px] bg-gradient-to-r from-yellow-400 via-yellow-300 to-yellow-500 opacity-80"></div>

    <!-- Mobile Dropdown -->
    <div id="mobile-menu" class="hidden flex-col bg-white shadow-md border-t border-gray-100">
      <a href="/" class="mobile-link">Home</a>
      <a href="/products" class="mobile-link">All Watches</a>
      <a href="/category/men" class="mobile-link">Men</a>
      <a href="/category/women" class="mobile-link">Women</a>
      <a href="/category/smart" class="mobile-link">Smart</a>
      <a href="/offers" class="mobile-link">Offers</a>
      <a href="/blogs" class="mobile-link">Blogs</a>
      <a href="/support" class="mobile-link">Support</a>

      <% if (user) { %>
        <a href="/account" class="mobile-link">My Account</a>
        <a href="/orders" class="mobile-link">Orders</a>
        <a href="/logout" class="mobile-link text-red-600">Logout</a>
      <% } else { %>
        <a href="/login" class="mobile-link text-blue-600 font-semibold">Login</a>
      <% } %>
    </div>

    <script>
      // Mobile menu toggle
      const menuBtn = document.getElementById('menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      if (menuBtn) {
        menuBtn.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
      }

      // Header shadow on scroll
      window.addEventListener('scroll', () => {
        const header = document.querySelector('header');
        if (window.scrollY > 30) {
          header.classList.add('shadow-lg', 'bg-white/95');
        } else {
          header.classList.remove('shadow-lg', 'bg-white/95');
        }
      });

      // Account dropdown toggle
      const accountBtn = document.getElementById('account-btn');
      const accountMenu = document.getElementById('account-menu');

      if (accountBtn) {
        accountBtn.addEventListener('click', (e) => {
          e.stopPropagation();
          accountMenu.classList.toggle('hidden');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', (e) => {
          if (!accountMenu.contains(e.target) && !accountBtn.contains(e.target)) {
            accountMenu.classList.add('hidden');
          }
        });
      }
    </script>
  </header>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
